  "description": "A wallet management system for tracking transactions, generating reports, setting budgets, and visualizing financial data for multiple accounts.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./build/src/app.js",
    "start:dev": "nodemon --exec babel-node ./src/app.js",
